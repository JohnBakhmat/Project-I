@model CourseWork.Models.Organisation

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Организация</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Boss" class="control-label">Босс</label>
                <input asp-for="Boss" class="form-control" type="number" />
                <span asp-validation-for="Boss" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Save" /> | 
                <a class="btn btn-danger" asp-action="Index">Вернуться</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
